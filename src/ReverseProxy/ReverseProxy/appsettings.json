{
  "ReverseProxyQuery": {
    "Routes": {
      "route-query": {
        "ClusterId": "cluster-query",
        "Match": {
          "Path": "api-query/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "cluster-query": {
        //"LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "cluster-query/destination1": {
            "Address": "http://localhost:4000"
          }
          //},
          //"cluster-query/destination2": {
          //  "Address": "http://localhost:4001"
          //}
        }
      }
    }
  },
  "ReverseProxyCommand": {
    "Routes": {
      "route-command": {
        "ClusterId": "cluster-command",
        "Match": {
          "Path": "api-command/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "cluster-command": {
        "Destinations": {
          "cluster-command/destination1": {
            "Address": "http://localhost:3000"
          }
        }
      }
    }
  }
}
